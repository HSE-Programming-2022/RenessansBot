                        + Environment.NewLine + " " + Environment.NewLine + "/information - –Ω–∞–π—Ç–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é" + Environment.NewLine + "/menu - —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –Ω–∞ –∫–∞–∫–∏–µ –≤–æ–ø—Ä–æ—Å—ã –æ—Ç–≤–µ—á–∞–µ—Ç –±–æ—Ç");
                    return;
                }
                else if (message.Text.ToLower() == "/salary_card")
                {
                    await botClient.SendTextMessageAsync(message.Chat, "–ö–æ–Ω—Ç–∞–∫—Ç–Ω–æ–µ –ª–∏—Ü–æ –ø–æ –≤–æ–ø—Ä–æ—Å–∞–º –∑–∞—Ä–ø–ª–∞—Ç–Ω—ã—Ö –∫–∞—Ä—Ç - –†–∞—à–∏—Ç–æ–≤–∞ –¢–∞–º–∞—Ä–∞: trashitova@rencredit.ru/–¥–æ–±–∞–≤–æ—á–Ω—ã–π –Ω–æ–º–µ—Ä: 11277 "
                        + Environment.NewLine + " " +Environment.NewLine + "/contacts - –∫–æ–Ω—Ç–∞–∫—Ç—ã" + Environment.NewLine + "/menu - —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –Ω–∞ –∫–∞–∫–∏–µ –≤–æ–ø—Ä–æ—Å—ã –æ—Ç–≤–µ—á–∞–µ—Ç –±–æ—Ç");
                    return;
                }
                else if (message.Text.ToLower() == "/autosignature_corporate_mail")
                {
                    await botClient.SendTextMessageAsync(message.Chat, "–ó–∞–π–¥–∏—Ç–µ –Ω–∞ –∫–æ—Ä–ø–æ—Ä–∞—Ç–∏–≤–Ω—ã–π –ø–æ—Ä—Ç–∞–ª intranet.rencredit.ru —Å —Ä–∞–±–æ—á–µ–≥–æ –∞–∫–∫–∞—É–Ω—Ç–∞, –≤ –æ—Å–Ω–æ–≤–Ω–æ–º –º–µ–Ω—é –æ—Ç–∫—Ä–æ–π—Ç–µ –≤–∫–ª–∞–¥–∫—É ¬´–û –∫–æ–º–ø–∞–Ω–∏–∏¬ª."
                        + Environment.NewLine + " " + Environment.NewLine + "/how_to - –∫–∞–∫ —Å–¥–µ–ª–∞—Ç—å" + Environment.NewLine + "/menu - —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –Ω–∞ –∫–∞–∫–∏–µ –≤–æ–ø—Ä–æ—Å—ã –æ—Ç–≤–µ—á–∞–µ—Ç –±–æ—Ç");
                    return;
                }
                else if (message.Text.ToLower() == "/bank_phone_number")
                {
                    await botClient.SendTextMessageAsync(message.Chat, "+7 (495) 783 46 00" + Environment.NewLine + " "
                        + Environment.NewLine + "/contacts - –∫–æ–Ω—Ç–∞–∫—Ç—ã" + Environment.NewLine + "/menu - —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –Ω–∞ –∫–∞–∫–∏–µ –≤–æ–ø—Ä–æ—Å—ã –æ—Ç–≤–µ—á–∞–µ—Ç –±–æ—Ç");
                    return;
                }
                else if (message.Text.ToLower() == "/education")
                {
                    await botClient.SendTextMessageAsync(message.Chat, "–ó–∞–π–¥–∏—Ç–µ –Ω–∞ –∫–æ—Ä–ø–æ—Ä–∞—Ç–∏–≤–Ω—ã–π –ø–æ—Ä—Ç–∞–ª intranet.rencredit.ru —Å —Ä–∞–±–æ—á–µ–≥–æ –∞–∫–∫–∞—É–Ω—Ç–∞, –≤ –æ—Å–Ω–æ–≤–Ω–æ–º –º–µ–Ω—é –æ—Ç–∫—Ä–æ–π—Ç–µ –≤–∫–ª–∞–¥–∫—É ¬´–ë–∞–Ω–∫ –¥–ª—è –í–∞—Å¬ª, –≤—ã–±–µ—Ä–µ—Ç–µ –ø—É–Ω–∫—Ç ¬´PRO–†–∞–∑–≤–∏—Ç–∏–µ¬ª"
                    + Environment.NewLine + " " + Environment.NewLine + "/information - –Ω–∞–π—Ç–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é" + Environment.NewLine + "/menu - —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –Ω–∞ –∫–∞–∫–∏–µ –≤–æ–ø—Ä–æ—Å—ã –æ—Ç–≤–µ—á–∞–µ—Ç –±–æ—Ç");
                    return;
